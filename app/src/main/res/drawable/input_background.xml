<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/aieBlue" android:width="@dimen/input_strokeWidth"/>
            <corners android:radius="@dimen/input_cornerRadius"/>
            <padding android:left="@dimen/input_padding" android:right="@dimen/dialog_padding"
                android:top="@dimen/dialog_padding"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/dimWhite"/>
            <stroke android:color="@color/aieBlue" android:width="@dimen/input_strokeWidth"/>
            <corners android:radius="@dimen/input_cornerRadius"/>
            <padding android:left="@dimen/input_padding" android:right="@dimen/dialog_padding"
                android:top="@dimen/dialog_padding"/>
        </shape>
    </item>
</selector>